@import "whitespace-reset.css"
@import "project_modal"

*
  box-sizing border-box

html
  font normal 1em 'Lato', sans-serif
  color: black
  a
    text-decoration none
  h3
    font-size 1.5em
    
header
  margin 0 auto
  text-align center
  h3
    display block
    padding 15px
    color red
  nav
    padding 20px
    a
      text-transform uppercase
      font-size 1.5em
      display inline-block
      cursor pointer
      &:focus
        color red
  span
    font-size 2em
    padding 0 0.5em

main
  margin 0 auto
  width 80%
  padding 0 30px
  box-sizing border-box
  section#profile
    display none
  ul
    text-align center
    li
      padding 0 5px
      display inline-block
      text-align center
      width 30%
      vertical-align top
      img
        display block
        width 100%
        margin 0 0 10px 0

footer
  position fixed
  bottom 0

@media screen and (max-width: 1025px) {
  main ul li {
    width: 100%;
  }
}