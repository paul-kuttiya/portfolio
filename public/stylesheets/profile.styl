section#profile
  display none
  width 80%
  margin 0 auto
  figure
    modal_bg()
    color: colors.navy
    padding 20px
    text-align center
    border-radius 30px
    #info
      display inline-block
      margin 0 50px 0 0
      vertical-align top    
      > img
        display block
        width auto
        height 200px
        margin 0 0 20px 0
        border-radius 100%
      h4
        padding 0 0 15px 0
      a
        color: colors.navy
        margin 0 15px 0 0
        &:hover
          color: colors.hover
    section
      text-align left
      display inline-block
      width 50%
      article
        padding 5px
        margin 0 0 0 15px
        h4
          display inline-block
          margin 0 15px 0 0