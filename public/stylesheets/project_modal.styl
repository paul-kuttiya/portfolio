.modal-state 
  display none
  &:checked + .modal
    opacity 1
    visibility visible
    .modal__inner 
      top 0

.modal
  opacity 0
  visibility hidden
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0,0,0, .9)
  transition opacity .50s ease
  .modal__inner
    transition top .50s ease
    position absolute
    text-align left
    top -20%
    right 0
    bottom 0
    left 0
    width 80%
    margin auto
    overflow auto
    background #fff
    border-radius 5px
    padding 2em 1em
    height 75%
    z-index 1
    .modal_content
      width 90%
      margin 0 auto
      overflow hidden
      img
        float left
        width 50%
        margin 0 30px 0 0
      section
        article
          margin 0 0 15px 0
          h4, p
            display inline-block
            padding 2px 0
          h4
            margin 0 10px 0 0
          p
            width 30%
            vertical-align top
    .modal__close
      font-size 1.5em
      color #000
      position absolute
      right 5px
      top 5px
      width 24px
      font-weight bold